<div class="container">
  <%= form_for @product, url: { action: :update }, html: { class: 'form' } do |f| %>   
    <h3 class="mt-4">Update Product</h3>   
    <%= "<div class='alert alert-danger'>#{@product.errors.full_messages.first}</div>".html_safe if @product.errors.any? %>
    
    <div class="mb-3">   
      <label for="product_name" class="form-label">Product Name</label>   
      <%= f.text_field :name, class: 'form-control' %>   
    </div>   
      
    <div class="mb-3">   
      <label for="product_price" class="form-label">Price</label>   
      <%= f.text_field :price, class: 'form-control' %>   
    </div>   
        
    <div class="mb-3">   
      <label for="product_description" class="form-label">Description</label>   
      <%= f.text_field :short_description, class: 'form-control' %>   
    </div>  

    <div class="mb-3">
      <label for="product_image" class="form-label">Product Image</label><br>
      <%= image_tag(@product.image, class: 'img-thumbnail', style: 'max-width: 100px; max-height: 100px;') if @product.image.attached? %>
      <%= f.file_field :image, class: 'form-control' %>
    </div> 
      
    <div class="mb-3">   
      <%= link_to 'Back', { controller: 'products', action: 'index' }, class: 'btn btn-secondary' %>   
      <%= f.submit 'Update Product', class: 'btn btn-primary' %>   
    </div>   
  <% end %>   
</div>
